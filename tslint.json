{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"arrow-parens": false,
		"curly": false,
		"forin": false,
		"import-spacing": false, // False positive on `export import` statements.
		"indent": [true, "tabs"],
		"interface-name": false,
		"max-classes-per-file": false,
		"max-line-length": {
			"options": {
				"ignore-pattern": "// "
			}
		},
		"member-access": false,
		"no-empty": false,
		"no-namespace": false,
		"no-reference": false,
		"no-shadowed-variable": false,
		"one-line": false,
		"trailing-comma": {
			"options": {
				"esSpecCompliant": true,
				"multiline": "never",
				"singleline": "never"
			}
		},
		"variable-name": {
			"options": [
				"allow-leading-underscore",
				"allow-pascal-case",
				"check-format"
			]
		}
	},
	"rulesDirectory": []
}

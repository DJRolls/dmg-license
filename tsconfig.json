{
"compilerOptions": {
	"target": "es6",
	"module": "commonjs",
	"moduleResolution": "node",
	"resolveJsonModule": true,
	"strict": true,
	"plugins": [
		{"name": "typescript-tslint-plugin"}
	],
	"outDir": "lib",
	"rootDir": "src",
	"declaration": true,
	"typeRoots": ["typings"],
	"sourceMap": true
},
"include": ["src/**/*.ts"]
}
